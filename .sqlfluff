[sqlfluff]
templater = dbt
dialect = bigquery
exclude_rules = LT05,LT12
max_line_length = 120

[sqlfluff:templater:dbt]
project_dir = surfalytics_dbt_core
profiles_dir = surfalytics_dbt_core
profile = surfalytics_dbt_core
target = dev

[sqlfluff:rules:capitalisation.keywords]
# Match existing style: lowercase keywords
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
# Match existing style: lowercase functions
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.types]
# Match existing style: lowercase types
capitalisation_policy = lower

[sqlfluff:indentation]
# Match existing style: 4 spaces (observed in your SQL files)
indent_unit = space
tab_space_size = 4

[sqlfluff:rules]
# Allow flexibility for dbt patterns
allow_scalar = True
single_table_references = consistent
